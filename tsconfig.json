{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/components/*": ["./src/front/shared/components/*"],
            "@/features/*": ["./src/front/features/*"],
            "@/widgets/*": ["./src/front/widgets/*"],
            "@/entities/*": ["./src/front/entities/*"],
            "@/pages/*": ["./src/front/pages/*"],
            "@/*": ["./src/*"]
        },
        "types": ["@testing-library/jest-dom"]
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "config/jest/jest.config.ts"
    ],
    "exclude": ["node_modules"]
}
